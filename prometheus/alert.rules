groups:
- name: containers
  rules:
  - alert: api_server_down
    expr: absent(container_memory_usage_bytes{name="api"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "API server down"
      description: "API server container is down for more than 30 seconds."
  - alert: sfu_server_down
    expr: absent(container_memory_usage_bytes{name="signaling"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "SFU server down"
      description: "SFU server container is down for more than 30 seconds."
  - alert: nginx_server_down
    expr: absent(container_memory_usage_bytes{name="nginx"})
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Nginx server down"
      description: "Nginx server container is down for more than 30 seconds."

